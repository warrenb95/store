<% if product.inventory_count&.positive? %>
  <p><%= product.inventory_count %>
    in stock</p>
<% else %>
  <p>Out of stock</p>
  <p>Email when available.</p>

  <%= form_with model: [product, Subscriber.new ] do |form| %>
    <%= form.email_field :email, placeholder: "you@example.com", required: true %>
    <%= form.submit "Submit" %>
  <% end %>
<% end %>
